<%= search_form_for @q, :class => collapse_search_form, :id => "holes_overviews_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :hole_number, "Hole number" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :hole_number_gteq, :class => "form-control", :placeholder => "Hole number greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :hole_number_lteq, :class => "form-control", :placeholder => "Hole number less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :distance_to_green, "Distance to green" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :distance_to_green_gteq, :class => "form-control", :placeholder => "Distance to green greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :distance_to_green_lteq, :class => "form-control", :placeholder => "Distance to green less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :distance_to_hole, "Distance to hole" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :distance_to_hole_gteq, :class => "form-control", :placeholder => "Distance to hole greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :distance_to_hole_lteq, :class => "form-control", :placeholder => "Distance to hole less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :golf_course_name_cont, "Golf course name contains" %>
    <%= f.text_field :golf_course_name_cont, :class => "form-control", :placeholder => "Golf course name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/holes_overviews" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#holes_overviews_filters">
  Show filters
</a>
