<% was_validated = holes_overview.errors.any? %>

<%= form_with(model: holes_overview, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% hole_number_class = "form-control" %>
    <% hole_number_was_invalid = holes_overview.errors.include?(:hole_number) %>

    <% if was_validated %>
      <% if hole_number_was_invalid %>
        <% hole_number_class << " is-invalid" %>
      <% else %>
        <% hole_number_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :hole_number %>
    <%= f.number_field :hole_number, class: hole_number_class, placeholder: "Enter hole number" %>
    <% if hole_number_was_invalid %>
      <% holes_overview.errors.full_messages_for(:hole_number).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% distance_to_hole_class = "form-control" %>
    <% distance_to_hole_was_invalid = holes_overview.errors.include?(:distance_to_hole) %>

    <% if was_validated %>
      <% if distance_to_hole_was_invalid %>
        <% distance_to_hole_class << " is-invalid" %>
      <% else %>
        <% distance_to_hole_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :distance_to_hole %>
    <%= f.text_field :distance_to_hole, class: distance_to_hole_class, placeholder: "Enter distance to hole" %>
    <% if distance_to_hole_was_invalid %>
      <% holes_overview.errors.full_messages_for(:distance_to_hole).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% distance_to_green_class = "form-control" %>
    <% distance_to_green_was_invalid = holes_overview.errors.include?(:distance_to_green) %>

    <% if was_validated %>
      <% if distance_to_green_was_invalid %>
        <% distance_to_green_class << " is-invalid" %>
      <% else %>
        <% distance_to_green_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :distance_to_green %>
    <%= f.text_field :distance_to_green, class: distance_to_green_class, placeholder: "Enter distance to green" %>
    <% if distance_to_green_was_invalid %>
      <% holes_overview.errors.full_messages_for(:distance_to_green).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% golf_course_class = "form-control" %>
    <% golf_course_was_invalid = holes_overview.errors.include?(:golf_course) %>

    <% if was_validated %>
      <% if golf_course_was_invalid %>
        <% golf_course_class << " is-invalid" %>
      <% else %>
        <% golf_course_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :golf_course_id %>
    <%= f.collection_select :golf_course_id, GolfCourse.all, :id, :to_s, {}, class: "form-control" %>
    <% if golf_course_was_invalid %>
      <% holes_overview.errors.full_messages_for(:golf_course).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
