<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Holes Results

    <a data-toggle="collapse" href="#round_holes_results_new_form">
      Add holes result
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @round.holes_results.each do |holes_result| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to holes_result, holes_result %>

        <%= link_to holes_result, method: :delete, data: { confirm: "Do you really want to delete this holes_result" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="round_holes_results_new_form">
        <%= render partial: "rounds/round_holes_results_new_form" %>
      </div>
    </div>

  </ul>
</div>
