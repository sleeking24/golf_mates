<% was_validated = round.errors.any? %>

<%= form_with(model: round, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% course_class = "form-control" %>
    <% course_was_invalid = round.errors.include?(:course) %>

    <% if was_validated %>
      <% if course_was_invalid %>
        <% course_class << " is-invalid" %>
      <% else %>
        <% course_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :course_id %>
    <%= f.collection_select :course_id, GolfCourse.all, :id, :to_s, {}, class: "form-control" %>
    <% if course_was_invalid %>
      <% round.errors.full_messages_for(:course).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <% score_class = "form-control" %>
    <% score_was_invalid = round.errors.include?(:score) %>

    <% if was_validated %>
      <% if score_was_invalid %>
        <% score_class << " is-invalid" %>
      <% else %>
        <% score_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :score %>
    <%= f.number_field :score, class: score_class, placeholder: "Enter score" %>
    <% if score_was_invalid %>
      <% round.errors.full_messages_for(:score).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% best_hole_class = "form-control" %>
    <% best_hole_was_invalid = round.errors.include?(:best_hole) %>

    <% if was_validated %>
      <% if best_hole_was_invalid %>
        <% best_hole_class << " is-invalid" %>
      <% else %>
        <% best_hole_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :best_hole %>
    <%= f.number_field :best_hole, class: best_hole_class, placeholder: "Enter best hole" %>
    <% if best_hole_was_invalid %>
      <% round.errors.full_messages_for(:best_hole).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% worst_hole_class = "form-control" %>
    <% worst_hole_was_invalid = round.errors.include?(:worst_hole) %>

    <% if was_validated %>
      <% if worst_hole_was_invalid %>
        <% worst_hole_class << " is-invalid" %>
      <% else %>
        <% worst_hole_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :worst_hole %>
    <%= f.number_field :worst_hole, class: worst_hole_class, placeholder: "Enter worst hole" %>
    <% if worst_hole_was_invalid %>
      <% round.errors.full_messages_for(:worst_hole).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% reason_wonlost_class = "form-control" %>
    <% reason_wonlost_was_invalid = round.errors.include?(:reason_wonlost) %>

    <% if was_validated %>
      <% if reason_wonlost_was_invalid %>
        <% reason_wonlost_class << " is-invalid" %>
      <% else %>
        <% reason_wonlost_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :reason_wonlost %>
    <%= f.text_area :reason_wonlost, class: reason_wonlost_class, placeholder: "Enter reason wonlost" %>
    <% if reason_wonlost_was_invalid %>
      <% round.errors.full_messages_for(:reason_wonlost).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% best_hole_description_class = "form-control" %>
    <% best_hole_description_was_invalid = round.errors.include?(:best_hole_description) %>

    <% if was_validated %>
      <% if best_hole_description_was_invalid %>
        <% best_hole_description_class << " is-invalid" %>
      <% else %>
        <% best_hole_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :best_hole_description %>
    <%= f.text_field :best_hole_description, class: best_hole_description_class, placeholder: "Enter best hole description" %>
    <% if best_hole_description_was_invalid %>
      <% round.errors.full_messages_for(:best_hole_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% worst_hole_description_class = "form-control" %>
    <% worst_hole_description_was_invalid = round.errors.include?(:worst_hole_description) %>

    <% if was_validated %>
      <% if worst_hole_description_was_invalid %>
        <% worst_hole_description_class << " is-invalid" %>
      <% else %>
        <% worst_hole_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :worst_hole_description %>
    <%= f.text_field :worst_hole_description, class: worst_hole_description_class, placeholder: "Enter worst hole description" %>
    <% if worst_hole_description_was_invalid %>
      <% round.errors.full_messages_for(:worst_hole_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
