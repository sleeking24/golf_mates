<div class="card mb-3">
  <h2 class="card-header h4">
    Round #<%= round.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Course</dt>
      <dd>
        <% if @round.course.present? %>
          <%= link_to round.course, round.course %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @round.user.present? %>
          <%= link_to round.user, round.user %>
        <% end %>
      </dd>

      <dt>Score</dt>
      <dd><%= round.score %></dd>

      <dt>Best hole</dt>
      <dd><%= round.best_hole %></dd>

      <dt>Worst hole</dt>
      <dd><%= round.worst_hole %></dd>

      <dt>Reason wonlost</dt>
      <dd><%= round.reason_wonlost %></dd>

      <dt>Best hole description</dt>
      <dd><%= round.best_hole_description %></dd>

      <dt>Worst hole description</dt>
      <dd><%= round.worst_hole_description %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back round, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @round.user %>
          <%= link_to edit_round_url(round), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @round.user %>
          <%= link_to round, method: :delete, data: { confirm: "Do you really want to delete this round?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(round.updated_at) %> ago
  </div>
</div>
